<?xml version="1.0" encoding="utf-8"?>

<mx:TitleWindow xmlns:mx="http://www.adobe.com/2006/mxml"	width="670" height="410"  verticalScrollPolicy="off"
				layout="vertical"
				showCloseButton="true"
				close="titleWindow_close(event);" 
				x="380" y="250"  
				dropShadowEnabled="true"
				borderAlpha="1.0"
				creationComplete="init()"
				backgroundImage=""
				xmlns:local="*" xmlns:s="library://ns.adobe.com/flex/spark" headerHeight="15">
	
	<mx:HTTPService 
		id="getallactiongrids" 
		url="ae_tlch_xmlreq.php" 
		useProxy="false" 
		method="POST" 
		contentType="application/xml"
		fault="getallactiongridfaultHandler(event)"
		result="getAllActiongridHandler(event)"   
		>
		<mx:request>
			<ezware_request>
				<action>refreshData</action>
				<company>{tp_company_code}</company>
				<sid>{tp_sessid}</sid>
				<parameters> REFRESH,RETRIEVE|DATAGRID_ALL|{tp_user_code}|</parameters>
				<systemAndJob></systemAndJob>
				<version>1</version>
			</ezware_request>
		</mx:request>
	</mx:HTTPService>
	
	<mx:Script source="as/ManagerBean/ResultStatus.as"/>
	<mx:Script source="as/ManagerBean/AlertMessageHandler.as"/>
	
	
	
	<mx:Script>    
		<![CDATA[    
			
			
			import mx.utils.ArrayUtil;
			import mx.utils.ObjectProxy;
			import mx.managers.PopUpManager;
			import mx.controls.Alert;
			import mx.collections.ArrayCollection;
			import mx.rpc.events.ResultEvent;
			import flash.events.Event;
			import mx.rpc.events.FaultEvent;
			[Bindable]       
			public var Arr_tp:ArrayCollection;
			[Bindable]   
			public var maintain:String;
			
			
			[Bindable]   
			public var tp_user_code:String;
			[Bindable]   
			public var tp_sessid:String;
			[Bindable]   
			public var tp_company_code:String;
			
			
			private function init():void{
			
				getallactiongrids.send();    
				
			}    
			private function titleWindow_close(evt:Event):void {
				//Alert.show("this should close");
				PopUpManager.removePopUp(this);
			}
			private function getallactiongridfaultHandler(evt:FaultEvent):void
			{
				
				AlertMessageShow(evt.message.toString());
			}
			
			
			private function getAllActiongridHandler(event:ResultEvent):void
			{
				if (event.result.ezware_response.status == 'OK' ) {
					Arr_tp = new ArrayCollection();
					if (event.result.ezware_response.refresh_data.datagrids.mainboarddatagrid == null)
					{ 
						Arr_tp=new ArrayCollection()
					}
					else if (event.result.ezware_response.refresh_data.datagrids.mainboarddatagrid  is ArrayCollection)
					{
						Arr_tp=event.result.ezware_response.refresh_data.datagrids.mainboarddatagrid ;
					}
					else if (event.result.ezware_response.refresh_data.datagrids.mainboarddatagrid  is ObjectProxy)
					{
						Arr_tp = new ArrayCollection(ArrayUtil.toArray(event.result.ezware_response.refresh_data.datagrids.mainboarddatagrid )); 
					}
					
					
					var srt:Sort = new Sort();
					srt.fields = [new SortField("buttonlabel")];
					Arr_tp.sort = srt;
					Arr_tp.refresh();      
					
					
				} else	{    
					
					var retstr:String = new String();
					if (event.result.ezware_response.status == "EXPIRED"){
						retstr = "Session EXPIRED due to inactivity.  Please log out and log back in again to create a new session.";
					} 
					if (event.result.ezware_response.status == "FAIL"){
						retstr = event.result.ezware_response.reason;
					} 
					AlertMessageShow(retstr);
					return;
				}	
				
			}
			
			
			private function search():void
			{
				
				searchField.text = (searchField.text).toUpperCase(); 
				if(searchField.text !='')
				{
					filter()
				}
				else
				{
					filterReset()
				}
			} 
			public function filter():void {
				
				
				Arr_tp.filterFunction = filterJobCode;
				Arr_tp.refresh();
				
			}
			private function filterJobCode(item:Object):Boolean
			{
				return item["buttonlabel"].match(new RegExp(searchField.text, 'i'))
			}
			
			public function filterReset():void {
				
				
				Arr_tp.filterFunction = null;
				Arr_tp.refresh();
				
			}
			
			
		]]>  
	</mx:Script>
	<mx:HBox width="100%" >
		<mx:Label text="Search Action Grid: "  fontSize="15" fontWeight="bold"/>
		<mx:TextInput id="searchField" toolTip="Filter Action Grid"  change="search()"  fontSize="15" fontWeight="bold" width="259"/>
	</mx:HBox> 
	<mx:AdvancedDataGrid id="adg_tp" width="100%" height="100%" dataProvider="{Arr_tp}" sortableColumns="true">    
		<mx:columns>
			<mx:AdvancedDataGridColumn headerText="Code" dataField="mbdcode" width="200" visible="false" />
			<mx:AdvancedDataGridColumn headerText="Description" dataField="mbddescription" visible="false"/>
			<mx:AdvancedDataGridColumn headerText="Assigned Action Grid" dataField="buttonlabel" />
			
		</mx:columns>
	</mx:AdvancedDataGrid>
</mx:TitleWindow>